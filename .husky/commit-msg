#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format (Conventional Commits)
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex for conventional commits
conventional_commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\(.+\))?(!)?: .{1,}'

if ! echo "$commit_msg" | grep -qE "$conventional_commit_regex"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(matchers): add new toHaveReceivedCommandOnce matcher"
  echo "  fix(mock-client): resolve memory leak in WeakMap"
  echo "  docs: update README installation instructions"
  echo ""
  exit 1
fi
